\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{macros}[2024/04/27 Custom macros package]
%--------------------------------%
% Package Imports %
%--------------------------------%
% Load xparse for defining commands with optional arguments
\RequirePackage{xparse}
\makeatletter
%--------------------------------%
% Custom Commands %
%--------------------------------%
\NewDocumentCommand{\maxiomm}{ O{} m +m }{%
    \begin{axiom}%
    \protected@edef\@currentlabelname{#2}%
    \label{#1}%
    #2 #3
    \end{axiom}%
}
\NewDocumentCommand{\axiomm}{ O{} m +m }{%
    \begin{axiom}[#2]%
    \protected@edef\@currentlabelname{#2}%
    \label{#1}%
    \mbox{}\\
    #3
    \end{axiom}%
}
\newcommand{\dfnc}[3][]{\begin{definition}{#2}{#1}#3\end{definition}}
\NewDocumentCommand{\dfn}{ O{} m +m }{%
    \begin{definition}[#2]%
    \protected@edef\@currentlabelname{#2}%
    \label{#1}%
    \mbox{}\\
    #3
    \end{definition}%
}
\NewDocumentCommand{\mthm}{ O{} m +m }{%
    \begin{theorem}%
    \protected@edef\@currentlabelname{#2}%
    \ifstrempty{#1}{}{ \label{#1} }%
    #2 #3
    \end{theorem}%
}
\NewDocumentCommand{\thm}{ O{} m +m }{%
    \begin{theorem}[#2]%
    \protected@edef\@currentlabelname{#2}%
