\newcommand{\mclm}[2]{\begin{proof}#1:\par #2 \end{proof}}
\newcommand{\nt}[1]{\begin{note}#1\end{note}}
\newcommand{\pf}[1]{\begin{proof}#1\end{proof}}
\newcommand{\soll}[1]{\begin{proof}[Solution]#1\end{proof}}
